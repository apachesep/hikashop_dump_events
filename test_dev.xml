<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikashop">
	<name>Hikashop test dev Plugin</name>
	<creationDate>avril 2014</creationDate>
	<version>1.0.0</version>
	<author>Garstud Workshop</author>
	<authorEmail>dev@garstud.com</authorEmail>
	<authorUrl>http://www.garstud.com</authorUrl>
	<copyright>(C) 2010-2014 HIKARI SOFTWARE. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to test HikaShop events</description>
	<files>
		<filename plugin="test_dev">test_dev.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="debug_mode" type="checkboxes" default="0" label="Mode Debug" 
					description="Definir le mode de debug (echo simple, Message Joomla, debug Joomla, JDump, ...">
					<option value="ECHO">Echo simple</option>
					<option value="MSG">Message d'information site</option>
					<option value="SYST">Debug Syteme Joomla</option>
					<option value="JDUMP">Debug JDump (extension JDump n√©cessaire)</option>
				</field>				
				<field name="disp_class" type="radio" default="1" label="Affiche Nom du plugin" 
					description="est-ce que le message de debug inclus le nom du plugin ?">
					<option value="0">Non</option>
					<option value="1">Oui</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
